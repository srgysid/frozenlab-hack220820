<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginStart="@dimen/padding_big"
    android:layout_marginEnd="@dimen/padding_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding_large"
        android:background="@drawable/bg_meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_number"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_date"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_type"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_address"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            style="@style/AppTheme.Button.OnColored"
            android:id="@+id/button_go"
            android:text="@string/go_to"
            android:clickable="false"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_marginStart="@dimen/padding_very_huge"
            android:layout_marginEnd="@dimen/padding_very_huge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button" />

    </LinearLayout>

</androidx.cardview.widget.CardView>