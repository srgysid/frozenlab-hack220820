<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular_ttf</item>

    </style>

    <style name="AppTheme.ScreenTitle">
        <item name="android:textSize">@dimen/text_size_screen_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semibold_ttf</item>
    </style>

    <style name="AppTheme.BigText">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="AppTheme.BigText.Bold">
        <item name="android:fontFamily">@font/montserrat_semibold_ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Hint">

    </style>

    <style name="AppTheme.Link">

    </style>

    <style name="AppTheme.DialogText">
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/cr_button</item>
        <item name="android:backgroundTint">@color/selector_button_bg_green</item>
        <item name="android:textColor">@color/selector_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppTheme.Button.OnColored">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.Button.Selectable">
        <item name="strokeColor">@color/selector_button_stroke_selected</item>
        <item name="strokeWidth">6dp</item>
    </style>
    <!-- EditText -->

    <style name="AppTheme.LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">@dimen/cr_button</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cr_button</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cr_button</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cr_button</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconTint">@color/red</item>
        <item name="errorIconDrawable">@drawable/ic_error_black_24dp</item>
        <item name="iconEndPadding">0dp</item>
    </style>

    <style name="AppTheme.LoginEditText">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>